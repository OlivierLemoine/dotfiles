mode "power options" {
    bindsym s exec "i3lock && systemctl syspend"
    bindsym q exec "shutdown now"
    bindsym r exec "reboot"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+p mode "power options"

mode "game" {
    bindsym $mod+Shift+Control+p mode "default"
}
bindsym $mod+g mode "game"

bindsym XF86AudioRaiseVolume exec "pulseaudio-ctl up && pkill -SIGRTMIN+10 i3blocks"
bindsym XF86AudioLowerVolume exec "pulseaudio-ctl down && pkill -SIGRTMIN+10 i3blocks"
bindsym XF86AudioMuteVolume exec "pulseaudio-ctl mute && pkill -SIGRTMIN+10 i3blocks"

